{% extends 'base.html.twig' %}

{% block title %}Grand Tournoi Pokémon{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ tournament.name }}</h1>
    <h2>Bienvenue au tournoi de combats de Pokémons, organisé  par Arthur</h2>

    <a href="{{ path('app_create') }}" class="btn btn-primary">Créer un nouveau tournoi</a>
    <a href="{{ path('app_view') }}" class="btn btn-primary">Voir le tournoi en cours </a>
    <br><hr>
    
    Liste des participants ({{ tournament.numberPokemons }} pokémons) :
    <ul>
        {% for pokemon in tournament.pokemons %}
        <li>{{ pokemon.name }} <img src='images/{{ pokemon.apiId }}.png' alt=""></li>
        {% endfor %}
    </ul>
    <hr>
        
</div>
{% endblock %}
