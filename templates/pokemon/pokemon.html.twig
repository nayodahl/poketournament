{% extends 'layout.html.twig' %}

{% block body %}
<main id="swup" class="transition-fade">
    <div class="section d-flex">
        <div class="container-fluid section-inner my-auto">
            <div class="row">
                <div class="col-8 mx-auto">

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" role="navigation" aria-current="page">Pokémon</li>
                        </ol>
                    </nav>     

                    <div class="row">
                        <div class="col">
                            <div class="card card-pokemon">
                                <img class="card-img-pokemon card-img-top" src='{{ pokemon.image }}' alt="pokemon avatar">
                                <div class="card-body">
                                    <h5 class="card-title">{{ pokemon.name }} n° {{ pokemon.apiId }}</h5>
                                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">{{ pokemon.name }}  n° {{ pokemon.apiId }}</small>
                                </div>
                            </div>

                            <div>
                                <h5>types</h5>
                                    <ul></ul>
                            </div>
                            <div>
                                <h5>Faiblesses</h5>
                            </div>
                        </div>
                    </div>
                    <br>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" role="navigation" aria-current="page">Evolutions</li>
                        </ol>
                    </nav>  
                    
                </div>
            </div>
        </div>
    </div>   
</main>

{% endblock %}