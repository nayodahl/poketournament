<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Gestionnaire de tournoi pokemon">
        <meta name="author" content="Anthony Fachaux">
        <link rel="shortcut icon" href="{{ asset('build/img/ico/favicon.ico') }}">

        <title>{% block title %}PokeTournament{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <!-- Navigation -->
        <nav class="navbar navbar-expand-md navbar-dark bg-info">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <button type="button" class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target="#main-navigation">
                    Menu
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand smoothie logo logo-light logo-pokemon" href="{{ path('app_homepage') }}"><img src="{{ asset('build/img/logo/pokemon_logo.png') }}" alt="PokeTournament"></a>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="main-navigation">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="{{ path('app_homepage') }}" class="nav-link">Accueil <span class="pe-7s-angle-down"></span></a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_stats') }}" class="nav-link">Stats <span class="pe-7s-angle-down"></span></a>
                        </li>
                        <li class="nav-item" >
                            <a href="{{ path('app_view') }}" class="nav-link">Tournoi <span class="pe-7s-angle-down"></span></a>
                        </li>
                        <li class="nav-item" >
                            <a href="{{ path('app_admin') }}" class="nav-link">Admin <span class="pe-7s-angle-down"></span></a>
                        </li>

                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              {{ app.user.username }}
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="{{ path('app_profile') }}">Profil</a>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Se d√©connecter</a>
                            </div>
                        </li>
                        {% else %}                        
                        <li class="nav-item">
                            <a href="" class="nav-link">Se Connecter <span class="pe-7s-angle-down"></span></a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link">Inscription <span class="pe-7s-angle-down"></span></a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
        </nav>
        <!-- Navigation end -->

        {% block body %}
        {% endblock %}
    </body>
</html>
